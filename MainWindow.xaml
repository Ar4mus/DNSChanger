<Window x:Class="DNSChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNSChanger"
        mc:Ignorable="d"
        Title="DNS Changer" Height="335" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="0 1 0 0" HorizontalAlignment="Center" Height="3" Margin="0,53,0,0" VerticalAlignment="Top" Width="450"/>
        <Button Content="Add New DNS" Click="AddDnsButton_Click" HorizontalAlignment="Left" Width="121" Margin="10,12,0,0" VerticalAlignment="Top" Height="31"/>
        <Label Content="asdasdas" Name="CurrentDns" Margin="75,78,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300"/>
        <ComboBox Name="DnsComboBox" FontSize="14" Width="300" Height="30" Margin="0,141,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Buttons for actions -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,220,0,0" Height="41" VerticalAlignment="Top">
            <Button Content="Set DNS" Width="100" Margin="5" Click="SetDnsButton_Click"/>
            <Button Content="Delete" Width="100" Margin="5" Click="DeleteDnsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>