<Window x:Class="DNSChanger.AddDnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New DNS" Height="330" Width="280" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid >
        <TextBlock Text="Title:"  FontSize="14" Height="25" Margin="10,10,10,249"/>
        <TextBox Name="TitleTextBox" Margin="10,35,10,224" FontSize="14" Height="25" />

        <TextBlock Text="Primary DNS:" FontSize="14" Height="25" Margin="10,75,10,184"/>
        <TextBox Name="PrimaryDnsTextBox" Margin="10,105,10,154" FontSize="14" Height="25"/>

        <TextBlock Text="Secondary DNS:" FontSize="14" Height="25" Margin="10,149,10,110"/>
        <TextBox Name="SecondaryDnsTextBox" Margin="10,172,10,87" FontSize="14" Height="25"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,197,0,0">
            <Button Content="Cancel" Width="69" Margin="5" Click="Cancel_Click" Height="25"/>
            <Button Content="Save" Width="73" Margin="5" Click="Save_Click" Height="25"/>
        </StackPanel>
    </Grid>

</Window>
